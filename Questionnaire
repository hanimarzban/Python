question=[]
answers=[]
correct_answer=[]
counter=0
answer_number=1
answer_range_begin=0
answer_range_end=4
#Set questions

number_of_questions=input("How many questions you want to create? (Integer and > 0)")
if int(number_of_questions)>0:
    for var in range(1,int(number_of_questions)+1):
     question.append(input(f"Enter the question #{var}"))
     correct_answer.append(input(f"Enter the correct answer for the question #{var}"))

     for append_possible_answers in range(1,5):
         answers.append(input(f"Enter the #{append_possible_answers} possible answers for question #{var}"))

#Read questions
while counter<len(question):
    print(f"{counter+1}-{question[counter]}")

    for x in range(answer_range_begin,answer_range_end):
        print(f"{answer_number}-{answers[x]}", end=" ")
        answer_number+=1
    answer_number=1
    answer_range_begin+=4
    answer_range_end+=4

#Check the answer
    result=input("Enter the correct answer")
    if result.lower()==correct_answer[counter].lower():
        print()
        print("Correct! :)")
        print()
    else:
        print()
        print("Incorrect :(")
        print()
    counter+=1

